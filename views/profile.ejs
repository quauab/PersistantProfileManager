<!DOCTYPE html>
<html>
	<head>
		<title><%=pageTitle%></title>
		<link rel="shortcut icon" href="/graphics//favicon.ico" type="image/x-icon" />
		<link rel="stylesheet" href="/css/bootstrap.css">
		<link rel="stylesheet" href="/css/style.css">
		<script src="/js/jquery-3.1.1.min.js"></script>
		<script src="/js/bootstrap.js"></script>
	</head>
	<body class="container">
		<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
			<div class="container-fluid">
				<div class="navbar-header">
					<span class="navbar-brand text topHeader" id="navbarheadertop">Profile Manager</span>
				</div>
                <ul class="nav navbar-nav profileAdder">
                    <li>
                        <a data-toggle="modal" href="#formModalProfile">
                            Add Profile
                        </a>
                    </li>
                    <li role="presentation">                        
                        <a data-toggle="collapse" href="#searcher">
                            Search
                        </a>
                    </li>
                </ul>
				<ul class="nav navbar-nav pull-right">	
					<li role="presentation">
                        <div id="searcher" class="panel-collapse collapse">
                            <form class="form inline-horizontal searchForm" method="POST" action="/search">
                                <div class="form-group">
                                    <input class="form-control" type="text" name="keyword" placeholder="Enter Search Term" required />
                                </div>
                            </form>
                        </div>
                    </li>				
				</ul>					
			</div>
		</nav>	
		
		<div id="main" class="row profileContent">	
        
        
        
        
        
            <div class="v-scroll container">
                <form method="post" action="/edit">
                    <div class="row well">
                        <h3 class="header">Edit <%=profile.login%></h3>
                        
                        <br/>
                        
                        <div class="col-md-6 v-scroll">
                            <input type="hidden" id="edit-form-id" name="id" value="<%=profile._id%>" />
                            <input type="hidden" id="edit-form-id" name="rev" value="<%=profile._rev%>" />

                            <div class="form-group">
                                <label>Title</label>
                                <input type="text" class="form-control" id="edit-form-title" name="title" value="<%=profile.title%>" required />
                            </div>

                            <div class="form-group">
                                <label>Username</label>
                                <input type="text" class="form-control" id="edit-form-username" name="username" value="<%=profile.login%>" required />
                            </div>

                            <div class="form-group">
                                <label>Password</label>
                                <input type="text" class="form-control" id="edit-form-pwd" name="pwd" value="<%=profile.pwd%>" required />
                            </div>

                            <div class="form-group">
                                <label>Site</label>
                                <input type="text" class="form-control" id="edit-form-site" name="site" value="<%=profile.site%>" required />
                            </div>		
                        </div>
                        
                        <div id="form1" class="col-md-6 v-scroll form">
                            <div class="form-group">
                                <label>Email</label>
                                <input type="text" class="form-control" id="edit-form-email" name="email" value="<%=profile.email%>" />
                            </div>
                            
                            <% profile.extra.forEach(function(data){ %>                                  
                                <div class="form-group">
                                    <label><%=data.key%></label>
                                    <input type="text" class="form-control" name="<%=data.key%>" value="<%=data.value%>" />
                                </div>
                           <% }); %>
                        </div>
                        
                        <div class="modal-footer">
                            <div class="btn-group dropdown clearfix pull-left">
                                <button class="btn">Submit</button>
                                <button class="btn dropdown-toggle" data-toggle="dropdown">
                                    <span class="caret"></span>
                                </button>
                                <ul id="inputAdder" class="dropdown-menu">
                                    <li id="textInput">Add Text Field</li>
                                    <li id="passwordInput">Add Password Field</li>
                                    <li id="emailInput">Add Email Field</li>
                                </ul>
                            </div>
                                        
                             <button class="btn btn-danger delete-profile pull-right" data-id="<%=profile._id%>"
                                data-rev="<%=profile._rev%>">                            
                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                            </button>
                        </div>	
                    </div>
                </form>
                <hr/>        
                <p class="goBackLink"><a class="link anchor clearfix" target="_top" href="/">Go Back</a></p>
            </div> 
        
               





               
        </div>
		
		<nav class="navbar navbar-inverse navbar-fixed-bottom" role="navigation">
			<div class="container-fluid">
				<div class="navbar-header">
					<span class="navbar-brand bottomHeader" id="navbarheaderbottom"></span>
				</div>
			</div>
		</nav>
	</body>
        <script src="/js/resources.js"></script>
        <script src="/js/start.js"></script>
</html>